<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="TOP_CENTER">
    <GridPane alignment="CENTER">
        <Label text="ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <JFXTextField promptText="Tipo de venta" fx:id="txtidTypeSale" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nombre" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <JFXTextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Descripcion" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <JFXTextField fx:id="txtDescription" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <JFXButton text="Agregar" fx:id="btnAdd" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <JFXButton text="Cancelar" fx:id="btnCancel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <JFXButton text="Actualizar" fx:id="btnUpdate" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    </GridPane>

</VBox>
